<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/e_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/e_title"
                android:layout_alignTop="@+id/more"
                android:text="Location" />

            <Button
                android:id="@+id/more"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_alignEnd="@+id/priority"
                android:layout_below="@+id/e_title"
                android:text="More"
                android:layout_marginTop="20sp"
                android:textColor="#31CAE5"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"
                android:background="@color/transparent"/>

            <TextView
                android:id="@+id/priority"
                android:layout_width="70dp"
                android:maxHeight="16dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/e_title"
                android:layout_alignEnd="@+id/e_thumbnail"
                android:layout_marginEnd="12dp"
                android:text="high"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/e_title"
                android:maxWidth="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/e_thumbnail"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:text="e_title" />

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/e_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="1dp"
                android:background="#efefef"
                android:scaleType="centerCrop" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>