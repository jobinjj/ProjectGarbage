<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.CardView
                android:id="@+id/crd_tool"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/bg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="30dp"
                        style="@style/Base.TextAppearance.AppCompat.Title"
                        android:textColor="#fff"/>
                    <Button
                        android:id="@+id/btn_edit"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/ic_edit"
                        android:textColor="#fff"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <RelativeLayout
                android:id="@+id/body"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/crd_tool">
                <RelativeLayout
                    android:id="@+id/lay2"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"

                    android:background="@drawable/bg">
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lay3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="135dp"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/bg_profile" />
                    <sample.com.jobin.msi.projectgarbage.RoundedCornerNetworkImageView
                        android:id="@+id/profile_pic"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="25dp"
                        app:radius="200">

                    </sample.com.jobin.msi.projectgarbage.RoundedCornerNetworkImageView>

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name Manderson"
                        android:layout_below="@+id/profile_pic"
                        android:layout_marginTop="18dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:textColor="#000"/>
                    <RelativeLayout
                        android:id="@+id/per"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_centerHorizontal="true">
                        <TextView
                            android:id="@+id/age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18 " />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/year"
                            android:text="year "
                            android:layout_toRightOf="@+id/age"
                            android:layout_alignBottom="@+id/age"/>
                        <TextView
                            android:id="@+id/sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="user"
                            android:layout_toRightOf="@+id/year"
                            />
                    </RelativeLayout>



                </RelativeLayout>

                <RelativeLayout


                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/lay3">
                    <RelativeLayout
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#c9c5c5"

                        android:layout_marginTop="22dp">
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="32dp"
                        android:id="@+id/lay5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/address_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:layout_marginTop="10dp"
                            style="@style/Base.TextAppearance.AppCompat.Body2"
                            android:layout_marginLeft="20dp"

                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/lay7"
                        android:layout_marginTop="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay5"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_alignStart="@+id/lay5">
                        <ImageView

                            android:id="@+id/home"
                            android:tint="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_home_black_24dp"
                            />

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/home"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="8dp"
                            android:maxHeight="52dp"
                            android:text="2nd Floor,Fortune Tower Padamugal,address 2nd Floor,Fortune Tower Padamugal,addresscast_expanded_controller_ad_image_descriptioncast_expanded_controller_ad_image_descriptioncast_expanded_controller_ad_image_descriptioncast_expanded_controller_ad_image_description" />
                        <TextView
                            android:id="@+id/street"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/address"
                            android:layout_alignStart="@+id/address"
                            android:text="street"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay7"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginLeft="20dp"
                        >

                        <ImageView
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"

                            android:src="@drawable/ic_phone_iphone_black_24dp" />

                        <TextView
                            android:id="@+id/mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/phone"
                            android:layout_toEndOf="@+id/phone"
                            android:layout_marginLeft="5dp"
                            android:text="1234567890" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/lay6"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#c9c5c5"
                        android:layout_below="@+id/rl_phone"
                        android:layout_marginTop="32dp">
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/door"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Door images"
                        android:layout_below="@+id/lay6"
                        android:layout_marginTop="19dp"
                        style="@style/Base.TextAppearance.AppCompat.Body2"
                        android:layout_marginLeft="15dp"/>
                    <sample.com.jobin.msi.projectgarbage.RoundedCornerNetworkImageView
                        android:id="@+id/doorimg"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/door"
                        android:scaleType="centerCrop"
                        android:layout_below="@+id/door"
                        android:layout_marginTop="10dp"
                        android:layout_margin="15dp"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="250dp"
                        android:layout_below="@+id/doorimg">
                        <TextView
                            android:id="@+id/viewmap"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View on Map"
                            style="@style/Base.TextAppearance.AppCompat.Body2"
                            android:layout_marginLeft="15dp"/>
                        <fragment
                            android:layout_below="@+id/viewmap"
                            android:id="@+id/map"
                            android:layout_margin="15dp"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />

                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>



        </RelativeLayout>
    </ScrollView>

</RelativeLayout>