<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#41c2c2c2">

    <android.support.v7.widget.CardView
        android:id="@+id/crd_tool"
        app:cardElevation="10dp"
        app:cardCornerRadius="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Karang Greenie"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:textColor="#fff"/>
            <Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:background="@color/transparent"
                android:text="Logout"
                android:textColor="#fff"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <LinearLayout
        android:id="@+id/l1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/crd_tool">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/divider"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/ewaste"
                android:layout_width="match_parent"
                android:layout_toStartOf="@+id/divider"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="7.5dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/e_waste"/>
            <ImageView
                android:id="@+id/organic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/divider"
                android:src="@drawable/organic"
                android:scaleType="centerCrop"
                android:layout_marginLeft="7.5dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"/>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/l2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/l1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/divider2"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/metal"
                android:layout_width="match_parent"
                android:layout_toStartOf="@+id/divider2"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="7.5dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/metal"/>
            <ImageView
                android:id="@+id/plastic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/divider2"
                android:src="@drawable/plastic"
                android:scaleType="centerCrop"
                android:layout_marginLeft="7.5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="30dp"/>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>