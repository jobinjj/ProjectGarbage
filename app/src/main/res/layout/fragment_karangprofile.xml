<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:visibility="gone"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.CardView
                android:id="@+id/crd_tool"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/bg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="30dp"
                        style="@style/Base.TextAppearance.AppCompat.Title"
                        android:textColor="#fff"/>
                    <Button
                        android:id="@+id/btn_edit"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/ic_edit"
                        android:textColor="#fff"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <RelativeLayout
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/crd_tool">
                <RelativeLayout
                    android:id="@+id/lay2"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"

                    android:background="@drawable/bg">
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lay3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="135dp"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/bg_profile" />
                    <sample.com.jobin.msi.projectgarbage.RoundedCornerNetworkImageView
                        android:id="@+id/profile_pic"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="25dp"
                        app:radius="200">

                    </sample.com.jobin.msi.projectgarbage.RoundedCornerNetworkImageView>

                    <TextView
                        android:id="@+id/namekarang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="namekarang Manderson"
                        android:layout_below="@+id/profile_pic"
                        android:layout_marginTop="18dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:textColor="#000"/>



                </RelativeLayout>

                <RelativeLayout


                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/lay3">
                    <RelativeLayout
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#c9c5c5"

                        android:layout_marginTop="22dp">
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="32dp"
                        android:id="@+id/lay5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/addresskarang_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:layout_marginTop="10dp"
                            style="@style/Base.TextAppearance.AppCompat.Body2"
                            android:layout_marginLeft="20dp"

                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/lay7"
                        android:layout_marginTop="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay5"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_alignStart="@+id/lay5">
                        <ImageView

                            android:id="@+id/home"
                            android:tint="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_home_black_24dp"
                            />

                        <TextView
                            android:id="@+id/addresskarang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/home"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="8dp"
                            android:maxHeight="52dp"
                            android:text="2nd Floor,Fortune Tower Padamugal,addresskarang 2nd Floor,Fortune Tower Padamugal,addresskarangcast_expanded_controller_ad_image_descriptioncast_expanded_controller_ad_image_descriptioncast_expanded_controller_ad_image_descriptioncast_expanded_controller_ad_image_description" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay7"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginLeft="20dp"
                        >

                        <ImageView
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"

                            android:src="@drawable/ic_phone_iphone_black_24dp" />

                        <TextView
                            android:id="@+id/mobilekarang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/phone"
                            android:layout_toEndOf="@+id/phone"
                            android:layout_marginLeft="5dp"
                            android:text="1234567890" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_phone"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginLeft="4dp"
                        android:layout_alignStart="@+id/rl_phone"
                        >

                        <ImageView
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/ic_close_envelope" />

                        <TextView
                            android:id="@+id/txt_emailkarang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/email"
                            android:layout_toEndOf="@+id/email"
                            android:layout_marginLeft="10dp"
                            android:text="jobinj1048@gmail.com" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/lay6"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#c9c5c5"
                        android:layout_below="@+id/rl_email"
                        android:layout_marginTop="32dp">
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/door"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Id proof"
                        android:layout_below="@+id/lay6"
                        android:layout_marginTop="19dp"
                        style="@style/Base.TextAppearance.AppCompat.Body2"
                        android:layout_marginLeft="15dp"/>
                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/id_proof"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/door"
                        android:scaleType="centerCrop"
                        android:layout_below="@+id/door"
                        android:layout_marginTop="10dp"
                        android:layout_margin="15dp"/>
                    <TextView
                        android:id="@+id/txt_prefered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prefered location"
                        android:layout_below="@+id/id_proof"
                        style="@style/Base.TextAppearance.AppCompat.Body2"
                        android:layout_alignStart="@+id/id_proof" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_alignStart="@+id/txt_prefered"
                        android:layout_below="@+id/txt_prefered"
                        android:layout_alignEnd="@+id/txt_prefered"
                        android:layout_marginTop="5dp"

                        android:background="@color/colorAccent"
                        android:id="@+id/relativeLayout2"/>
                    <TextView
                        android:id="@+id/txt_prefered_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:text="cherthala,thuravoor,Poochakal"
                        android:layout_below="@+id/relativeLayout2"
                        android:layout_alignStart="@+id/relativeLayout2"
                        android:layout_marginBottom="17dp"/>
                </RelativeLayout>



            </RelativeLayout>



        </RelativeLayout>
    </ScrollView>



</RelativeLayout>